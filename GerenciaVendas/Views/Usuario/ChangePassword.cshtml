@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Alterar Senha";
}

<h2>@ViewData["Title"]</h2>

<div class="feedback-message">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" id="success-message">
            <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" id="error-message">
            <i class="fa fa-times-circle"></i> @TempData["ErrorMessage"]
        </div>
    }
</div>

<form asp-action="ChangePassword" method="post" class="change-password-form">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="SenhaAtual">Senha Atual</label>
        <input asp-for="SenhaAtual" class="form-control" type="password" />
        <span asp-validation-for="SenhaAtual" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NovaSenha">Nova Senha</label>
        <input asp-for="NovaSenha" class="form-control" type="password" />
        <span asp-validation-for="NovaSenha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmarNovaSenha">Confirmar Nova Senha</label>
        <input asp-for="ConfirmarNovaSenha" class="form-control" type="password" />
        <span asp-validation-for="ConfirmarNovaSenha" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Alterar Senha</button>
</form>
<a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        window.onload = function() {
            setTimeout(function() {
                var successMessage = document.getElementById('success-message');
                var errorMessage = document.getElementById('error-message');
                if (successMessage) {
                    successMessage.style.display = 'none';
                }
                if (errorMessage) {
                    errorMessage.style.display = 'none';
                }
            }, 3000); // 3000 milissegundos = 3 segundos
       
    };
</script>
}

<style>
  
