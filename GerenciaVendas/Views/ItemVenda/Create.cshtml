@model GerenciaVendas.Models.ItemVenda

@{
    ViewData["Title"] = "Adicionar Item de Venda";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="IdProduto" class="control-label">Produto</label>
        <select asp-for="IdProduto" class="form-control">
            <!-- Opções de produtos vão aqui -->
        </select>
        <span asp-validation-for="IdProduto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantidade" class="control-label">Quantidade</label>
        <input asp-for="Quantidade" type="number" class="form-control" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Desconto" class="control-label">Desconto (%)</label>
        <input asp-for="Desconto" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Desconto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Adicionar" class="btn btn-primary" />
        <a href="@Url.Action("Index", "ItemVenda")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
