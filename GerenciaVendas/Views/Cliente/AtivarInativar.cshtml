@model GerenciaVendas.Models.Cliente

@{
    ViewData["Title"] = Model.Estado ? "Inativar Cliente" : "Ativar Cliente";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <p>Tem certeza de que deseja @(Model.Estado ? "inativar" : "ativar") o cliente <strong>@Model.Nome</strong>?</p>
</div>

<form asp-action="@(Model.Estado ? "Inativar" : "Ativar")" method="post">
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <input type="submit" value="@(Model.Estado ? "Inativar" : "Ativar") Cliente" class="btn btn-warning" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
