@model GerenciaVendas.ViewModels.RelatorioViewModel

@{
    ViewData["Title"] = "Gerar Relatório";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="GerarRelatorio" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="DataInicio" class="control-label">Data Início</label>
        <input asp-for="DataInicio" type="date" class="form-control" />
        <span asp-validation-for="DataInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataFim" class="control-label">Data Fim</label>
        <input asp-for="DataFim" type="date" class="form-control" />
        <span asp-validation-for="DataFim" class="text-danger"></span>
    </div>

    <!-- Incluir outros campos de filtro conforme necessário -->

    <div class="form-group">
        <input type="submit" value="Gerar Relatório" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
